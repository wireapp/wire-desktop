{
  "build": {
    "directories": {
      "app": "electron",
      "buildResources": "resources",
      "output": "wrap/dist"
    }
  },
  "dependencies": {
    "debug": "3.1.0"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-jest": "22.4.3",
    "babel-loader": "7.1.4",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "cross-env": "5.1.4",
    "css-loader": "0.28.11",
    "electron": "1.8.4",
    "electron-builder": "18.6.2",
    "electron-mocha": "6.0.1",
    "electron-packager": "12.0.1",
    "electron-winstaller": "2.5.2",
    "eslint": "4.19.1",
    "eslint-plugin-react": "7.7.0",
    "grunt": "1.0.2",
    "grunt-contrib-clean": "1.1.0",
    "grunt-git": "1.0.9",
    "grunt-gitinfo": "0.1.8",
    "husky": "0.14.3",
    "jasmine": "3.1.0",
    "jest": "22.4.3",
    "lint-staged": "7.0.4",
    "load-grunt-tasks": "3.5.2",
    "prettier": "1.12.0",
    "style-loader": "0.20.3",
    "webpack": "3.11.0"
  },
  "license": "LicenseRef-LICENSE",
  "lint-staged": {
    "*.css": [
      "npm run lint:style",
      "git add"
    ]
  },
  "name": "wire-desktop",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/wireapp/wire-desktop.git"
  },
  "scripts": {
    "preinstall": "cd electron && npm install",
    "prestart": "npm run bundle:dev",
    "start": "cross-env NODE_DEBUG=wire-desktop* electron electron --inspect --devtools --enable-logging",
    "edge": "npm run prestart && electron electron --inspect --devtools --enable-logging --env=https://wire-webapp-edge.zinfra.io",
    "staging": "npm run prestart && electron electron --inspect --devtools --enable-logging --env=https://wire-webapp-staging.zinfra.io",
    "prod": "npm run prestart && electron electron --inspect --devtools --enable-logging --env=https://app.wire.com",
    "localhost": "npm run prestart && electron electron --inspect --devtools --enable-logging --env=http://localhost:8080/app",
    "lint": "eslint electron",
    "lint:fix:style": "prettier --single-quote --print-width=120 --write '**/*.css'",
    "test": "npm run test:style && npm run test:react && npm run test:main && npm run test:e2e",
    "test:js": "jasmine --config=tests/js/jasmine.json",
    "test:main": "electron-mocha --reporter spec tests/main",
    "test:react": "npx jest",
    "test:renderer": "electron-mocha --renderer --reporter spec tests/renderer",
    "test:style": "npm run lint",
    "test:e2e": "mocha tests/e2e/e2e.js",
    "build:macos": "grunt macos-prod",
    "build:win": "grunt win-prod",
    "build:linux": "grunt linux-prod",
    "bundle:dev": "webpack",
    "bundle": "webpack --env.production"
  }
}
