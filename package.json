{
  "name": "wire-desktop",
  "license": "LicenseRef-LICENSE",
  "private": true,
  "scripts": {
    "preinstall": "cd electron && npm install",
    "install": "cd electron && npm run rebuild-native-modules",
    "postinstall": "cd electron && npm run rebuild-neon",
    "electron": "npm run bundle && electron electron --inspect --devtools --enable-logging",
    "start": "npm run electron",
    "edge": "npm run electron -- --env=https://wire-webapp-edge.zinfra.io",
    "staging": "npm run electron -- --env=https://wire-webapp-staging.zinfra.io",
    "prod": "npm run electron -- --env=https://app.wire.com",
    "localhost": "npm run electron -- --env=http://localhost:8888",
    "lint": "eslint electron",
    "jest": "jest",
    "test": "npm run lint && electron-mocha tests",
    "build:macos": "grunt macos-prod",
    "build:win": "grunt win-prod",
    "build:linux": "grunt linux-prod",
    "bundle:dev": "webpack --config webpack.dev.config.js",
    "bundle": "webpack --config webpack.prod.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wireapp/wire-desktop.git"
  },
  "build": {
    "directories": {
      "buildResources": "resources",
      "app": "electron",
      "output": "wrap/dist"
    }
  },
  "devDependencies": {
    "babel-core": "6.25.0",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.0",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "css-loader": "0.28.4",
    "electron": "1.7.4",
    "electron-builder": "18.6.2",
    "electron-mocha": "4.0.0",
    "electron-packager": "8.7.2",
    "electron-winstaller": "2.6.3",
    "eslint": "4.1.1",
    "eslint-plugin-react": "7.1.0",
    "grunt": "1.0.1",
    "grunt-contrib-clean": "1.1.0",
    "grunt-git": "1.0.4",
    "grunt-github-changes": "0.1.0",
    "jest": "20.0.4",
    "load-grunt-tasks": "3.5.2",
    "style-loader": "0.18.2",
    "webpack": "3.0.0"
  },
  "dependencies": {
    "babili-webpack-plugin": "0.1.2",
    "debug": "2.6.8"
  }
}
